    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Current .NET Script",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "script",
                "${file}"
            ],
            "group": "none",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}